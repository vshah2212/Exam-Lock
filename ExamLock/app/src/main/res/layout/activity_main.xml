<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vshah2212.examlock.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonParent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Set up device as:" />

    <Button
        android:id="@+id/buttonParent"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/spacee"
        android:text="Parent" />

    <Space
        android:id="@+id/spacee"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/buttonStudent"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacee"
        android:layout_centerHorizontal="true"
        android:text="Student" />



</RelativeLayout>
